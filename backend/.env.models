# AI Model Configuration
# Copy this to .env and modify as needed

# Enable/disable real AI processing
USE_REAL_AI=true

# Model paths
AI_MODEL_PATH=data/models

# Face Detection Model Settings
FACE_DETECTION_MODEL=yolov11s.pt
FACE_DETECTION_CONFIDENCE=0.5

# Anti-Spoofing Model Settings - uses direct classification comparison
ANTI_SPOOF_MODEL=yolov11s-cls.pt

# Face Recognition Model Settings
FACE_RECOGNITION_MODEL=buffalo_l
FACE_SIMILARITY_THRESHOLD=0.6
EMBEDDING_DIM=512

# Performance Settings
USE_GPU=false
MODEL_DEVICE=cpu
BATCH_SIZE=1

# Processing Settings
MAX_FACE_SIZE=640
MIN_FACE_SIZE=32
FACE_PADDING=0.2

# Quality Control
MIN_FACE_QUALITY=0.3
MAX_FACES_PER_IMAGE=1
ENABLE_FACE_ALIGNMENT=true

# Cache Settings
ENABLE_MODEL_CACHE=true
CACHE_SIZE=100

# Logging
AI_LOG_LEVEL=INFO
ENABLE_MODEL_TIMING=false
