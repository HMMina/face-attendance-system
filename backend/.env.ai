# ðŸ¤– AI-Enhanced Face Recognition System Environment

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/face_attendance
DATABASE_ECHO=false

# AI Configuration
USE_REAL_AI=true
AI_MODEL_PATH=data/models
FACE_PHOTOS_PATH=data/face_photos
EMBEDDINGS_CACHE_PATH=data/embeddings/cache

# Face Recognition Settings
FACE_DETECTION_CONFIDENCE=0.5
FACE_MATCHING_THRESHOLD=0.65  # Giáº£m tá»« 0.7 xuá»‘ng 0.65 Ä‘á»ƒ dá»… nháº­n diá»‡n hÆ¡n
ANTI_SPOOFING_THRESHOLD=0.5
MAX_FACE_DISTANCE=0.6

# Image Processing Settings
MAX_IMAGE_SIZE=2048
JPEG_QUALITY=85
FACE_CROP_MARGIN=0.2

# Performance Settings
EMBEDDING_CACHE_SIZE=1000
MODEL_BATCH_SIZE=1
GPU_ENABLED=false
CPU_CORES=4

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Security
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/face_recognition.log

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png"]

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
DEBUG=false
RELOAD=false
